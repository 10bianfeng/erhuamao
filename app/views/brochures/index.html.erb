<ul id="breadcrumb_navigation" class="self_clear clear_list_style hide_from_print">
    <li>
        <a href="/">首页</a>
        &nbsp;&nbsp;/&nbsp;&nbsp;
    </li>
    <li>Brochure Request</li>
</ul>
<div class="self_clear">
    <div id="primary_content" class="align_edges">
        <div id="cs_control_1329" class="">
            <div class="CS_Element_Schedule" title="" id="CS_Element_content">
                <a name="customcf2375" id="customcf2375"></a>
                <a name="CP_JUMP_2375" id="CP_JUMP_2375"></a>
                <div id="cs_control_2375" class="cs_control CS_Element_CustomCF">
                    <div id="CS_CCF_1376_2375">
                        <h1>A World of Destinations</h1>
                        <p>
                            To download a brochure, click on the Download PDF link next to the appropriate brochure cover.
To request brochures to be sent to you, check the box next to the three
                            <br>
                            brochure(s) you want to receive and then click on the Request Brochure link.
Travel Agents should
                            <a href="/login.cfm">login</a>
                            or
                            <a href="/services/signup_agent_services.cfm">register</a>
                            before ordering brochures.
                        </p>
                        <form id="dsp_brochure_order" action="/travel_brochures/?fuseaction=dsp_brochure_order&amp;cbc=Request Brochure" method="post">
                            <input type="hidden" name="fuseaction" value="dsp_brochure_order">
                            <input type="hidden" name="isAgent" id="isAgent" value="0">
                            <table width="100%">
                                <tbody>
                                    <% @brochures.each_slice(3) do |brochures| %>
                                        <tr>
                                        <% brochures.each do |brochure| %>                             
                                        <td width="33%">
                                            <img src="<%= brochure.cover.url %>" alt="<%= brochure.name %>" title="<%= brochure.name %>" width="125" height="162"> <strong class="highlight">New!</strong> <strong><%= brochure.name %></strong>
                                            <ul class="clear_list_style attribute_list">
                                                <!-- Page flip brochure -->
                                                <li>
                                                    <a class="icon page_flip" href="<%= brochure.doc.url %>" title="<%= brochure.name %>"  target="_blank">View Online</a>
                                                </li>
                                                <!-- Download brochure -->
                                                <li>
                                                    <a class="icon download" href="<%= brochure.doc.url %>">Download PDF</a>
                                                </li>
                                            </ul>
                                        </td>
                                        <% end %>
                                        </tr>
                                    <% end %>
                                </tbody>
                            </table>
                        </form>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>