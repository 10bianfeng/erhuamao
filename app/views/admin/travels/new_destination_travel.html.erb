<div class="row">
<h3>后台管理 > 绑定相关地区 <div class="pull-right"><%= link_to '返回列表', admin_travels_path %></div></h3>
<hr>

<h5>已绑定地区</h5>
<% @travel.destinations.each do |destination| %>
	<%= destination.name %> <br>
<% end %>

<h5>绑定新地区</h5>
<%= form_for(@travel, :url => "/admin/travels/#{@travel.id}/create_destination_travel", :method => :get) do |f| %>
  <div class="control-group">
    <label class="control-label">destinations</label>
    <div class="controls">
    	<select name="destination_id">
				<%= Destination.find(:all, :order => 'id').each do |destination| %>
					<option value="<%= destination.id %>" selected="selected"><%= destination.name %></option>  
				<% end %>
			</select>
    </div>
  </div>
  <div class="control-group">
    <div class="controls">
      <%= f.submit %>
    </div>
  </div>
<% end %>


</div>


