<div class="row">
<h3>后台管理 > Travel列表 <div class="pull-right"><%= link_to '创建新Travels', new_admin_travel_path %></div></h3>
<hr>
<table class="table table-striped table-bordered"> 
  <tr>
    <th>ID</th>
    <th>Name</th>
    <th>日程</th>
    <th>所属地区</th>
    <th>所属地兴趣点</th>
    <th>操作</th>
  </tr>

<% @travels.each do |travel| %>
  <tr>
    <td>
      <%= travel.id %>
    </td>
    <td><%= travel.name %></td>
    <td>
      <table>
        <tbody>
          <% travel.itineraries.each do |itinerary| %>
          <tr>
            <td><%= itinerary.sort %></td>
            <td><a href="/admin/travels/<%= travel.id %>/itineraries/<%= itinerary.id %>"><%= itinerary.name %></a></td>
            <td><a href="/admin/travels/<%= travel.id %>/itineraries/<%= itinerary.id %>/edit">编辑</a> / <a href="">删除</a></td>
            <td></td>
          </tr>
          <% end %>
        </tbody>
      </table>
    </td>
    <td>
      <table>
        <tbody>
          <% travel.destinations.each do |destination| %>
          <tr>
            <td><a href="/admin/destinations/<%= destination.id %>"><%= destination.name %></a></td>
            <td><a href="/admin/destinations/<%= destination.id %>/edit">编辑</a> / <a href="">删除</a></td>
            <td></td>
          </tr>
          <% end %>
        </tbody>
      </table>
    </td>
    <td>
      <table>
        <tbody>
          <% travel.interests.each do |interest| %>
          <tr>
            <td><a href="/admin/interests/<%= interest.id %>"><%= interest.name %></a></td>
            <td><a href="/admin/interests/<%= interest.id %>/edit">编辑</a> / <a href="">删除</a></td>
            <td></td>
          </tr>
          <% end %>
        </tbody>
      </table>
    </td>
    <td>
      <%= link_to '查看', [:admin, travel] %> | 
      <%= link_to '编辑', edit_admin_travel_path(travel) %> | 
      <%= link_to '删除', [:admin, travel], :confirm => '确定要删除么?', :method => :delete %> |
      <a href="/admin/travels/<%= travel.id %>/itineraries/new">添加日程</a>
    </td>
  </tr>
<% end %>
</table>
<%= paginate @travels %>
</div>