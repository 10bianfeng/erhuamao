<div class="row">
<h3>后台管理 > User列表 <div class="pull-right"><%= link_to '创建新Users', new_admin_user_path %></div></h3>
<hr>
<table class="table table-striped table-bordered"> 
  <tr>
    <th>ID</th>
    <th>Email</th>
    <th>Username</th>
    <th>Sign in count</th>
    <th>Remember created at</th>
    <th>Current sign in at</th>
    <th>Last sign in at</th>
    <th>Current sign in ip</th>
    <th>Last sign in ip</th>
    <th>Confirmed at</th>
    <th>Confirmation sent at</th>
    <th>Failed attempts</th>
    <th>Locked at</th>
    <th>Updated at</th>
    <th>Created at</th>
    <th>操作</th>
  </tr>

<% @users.each do |user| %>
  <tr>
    <td>
      <%= user.id %>
    </td>
    <td><%= user.email %></td>
    <td><%= user.username %></td>
    <td><%= user.sign_in_count %></td>
    <td><%= user.remember_created_at %></td>
    <td><%= user.current_sign_in_at %></td>
    <td><%= user.last_sign_in_at %></td>
    <td><%= user.current_sign_in_ip %></td>
    <td><%= user.last_sign_in_ip %></td>
    <td><%= user.confirmed_at %></td>
    <td><%= user.confirmation_sent_at %></td>
    <td><%= user.failed_attempts %></td>
    <td><%= user.locked_at %></td>
    <td><%= user.updated_at %></td>
    <td><%= user.created_at %></td>
    <td>
      <%= link_to '查看', [:admin, user] %> | 
      <%= link_to '禁用', edit_admin_user_path(user) %> | 
      <%= link_to '编辑', edit_admin_user_path(user) %> | 
      <%= link_to '删除', [:admin, user], :confirm => '确定要删除么?', :method => :delete %>
    </td>
  </tr>
<% end %>
</table>
<%= paginate @users %>
</div>