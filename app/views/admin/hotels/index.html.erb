<div class="row">
<h3>后台管理 > Hotel列表 <div class="pull-right"><%= link_to '创建新Hotels', new_admin_hotel_path %></div></h3>
<hr>
<table class="table table-striped table-bordered"> 
  <tr>
    <th>ID</th>
    <th>Name</th>
    <th>Destination</th>
    <th>图片</th>
    <th>操作</th>
  </tr>

<% @hotels.each do |hotel| %>
  <tr>
    <td>
      <%= hotel.id %>
    </td>
    <td><%= hotel.name %></td>
    <td><%= hotel.destination_id %></td>
    <td><%= hotel.photos.size %> / <a href="/admin/hotels/<%= hotel.id %>/new_photo">上传图片</a></td>
    <td>
      <%= link_to '查看', [:admin, hotel] %> | 
      <%= link_to '编辑', edit_admin_hotel_path(hotel) %> | 
      <%= link_to '删除', [:admin, hotel], :confirm => '确定要删除么?', :method => :delete %>
    </td>
  </tr>
<% end %>
</table>
<%= paginate @hotels %>
</div>