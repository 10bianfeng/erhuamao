
<div class="row">
<h3 class="path">后台管理首页</h3>

<h5>最新订单</h5>
<hr>
<table class="table table-striped table-bordered"> 
  <tr>
    <th>ID</th>
    <th>Last name</th>
    <th>Phone</th>
    <th>Travel</th>
    <th>Datesprice</th>
    <th>Destination</th>
    <th>People count</th>
    <th>Agent name</th>
    <th>Agent code</th>
    <th>订单时间</th>
    <th>操作</th>
  </tr>

<% @bookings.each do |booking| %>
  <tr>
    <td>
      <%= booking.id %>
    </td>
    <td><%= booking.last_name %></td>
    <td><%= booking.phone %></td>
    <td><%= booking.travel.name %></td>
    <td><%= booking.datesprice_id %></td>
    <td><%= booking.destination_id %></td>
    <td><%= booking.people_count %></td>
    <td><%= booking.agent_name %></td>
    <td><%= booking.agent_code %></td>
    <td><%= booking.created_at %></td>
    <td>
      <%= link_to '查看', [:admin, booking] %> | 
      <%= link_to '编辑', edit_admin_booking_path(booking) %> | 
      <%= link_to '删除', [:admin, booking], :confirm => '确定要删除么?', :method => :delete %>
    </td>
  </tr>
<% end %>
</table>

<h5>最新旅行意向(定制行程)</h5>
<hr>
<table class="table table-striped table-bordered"> 
  <tr>
    <th>ID</th>
    <th>Last name</th>
    <th>Phone</th>
    <th>Agent name</th>
    <th>Agent code</th>
    <th>定制的线路</th>
    <th>订单时间</th>
    <th>操作</th>
  </tr>

<% @gbookings.each do |gbooking| %>
  <tr>
    <td>
      <%= gbooking.id %>
    </td>
    <td><%= gbooking.last_name %></td>
    <td><%= gbooking.phone %></td>
    <td><%= gbooking.agent_name %></td>
    <td><%= gbooking.agent_code %></td>
    <td><%= gbooking.customizebookings.size %></td>
    <td><%= gbooking.created_at %></td>
    <td>
      <%= link_to '查看', [:admin, gbooking] %> | 
      <%= link_to '编辑', edit_admin_gbooking_path(gbooking) %> | 
      <%= link_to '删除', [:admin, gbooking], :confirm => '确定要删除么?', :method => :delete %>
    </td>
  </tr>
<% end %>
</table>

