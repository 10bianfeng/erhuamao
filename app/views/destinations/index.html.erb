<h1>Listing destinations</h1>

<table>
  <tr>
    <th>Name</th>
    <th>Desc title</th>
    <th>Desc</th>
    <th>Banner pic</th>
    <th>Map pic</th>
    <th>Flights</th>
    <th>Timezone</th>
    <th>Climate</th>
    <th>Health requirements</th>
    <th>Voltage</th>
    <th>Currency</th>
    <th></th>
    <th></th>
    <th></th>
  </tr>

<% @destinations.each do |destination| %>
  <tr>
    <td><%= destination.name %></td>
    <td><%= destination.desc_title %></td>
    <td><%= destination.desc %></td>
    <td><%= destination.banner_pic %></td>
    <td><%= destination.map_pic %></td>
    <td><%= destination.flights %></td>
    <td><%= destination.timezone %></td>
    <td><%= destination.climate %></td>
    <td><%= destination.health_requirements %></td>
    <td><%= destination.voltage %></td>
    <td><%= destination.currency %></td>
    <td><%= link_to 'Show', destination %></td>
    <td><%= link_to 'Edit', edit_destination_path(destination) %></td>
    <td><%= link_to 'Destroy', destination, :confirm => 'Are you sure?', :method => :delete %></td>
  </tr>
<% end %>
</table>

